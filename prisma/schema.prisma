// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Atendant {
  id            String   @id
  email         String   @unique
  answeredCalls Call[]
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
}

model Call {
  id             String    @id
  atendant       Atendant  @relation(fields: [atendantId], references: [id])
  atendantId     String
  clientSocketId String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @default(now())
  Message        Message[]
}

model Message {
  id         String   @id
  isAtendant Boolean  @default(false)
  call       Call     @relation(fields: [callId], references: [id])
  callId     String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}
